<header class="page-header with-actions">
  <h1>All tags</h1>

  <p class="actions">
    <%= link_to new_tag_path, class: 'btn btn-primary' do %>
      <i class="icon-plus icon-white"></i> Add new tag
    <% end %>
  </p>
</header>

<ul class="tags-list">
  <% @parents.each do |parent, children| %>
    <li class="parent-tag">
      <div class="details">
        <h2><span class="tag-type"><%= parent.tag_type.humanize %>:</span> <%= parent.title %></h2>
        <div class="actions">
          <%= link_to new_tag_path(type: parent.tag_type, parent_id: parent.tag_id), class: 'btn' do %>
            <i class="icon-plus"></i> Add child tag
          <% end %>
          <%= link_to "Edit tag", edit_tag_path(parent), class: 'btn' %>
        </div>
      </div>

      <ul class="children">
        <% children.each do |tag| %>
          <li class="child-tag">
            <h3>
              <%= link_to tag.title, edit_tag_path(tag) %>
              <%= link_to tag.tag_id, public_tag_url(tag), class: 'tag-id' %>
            </h3>
            <div class="actions">
              <%= link_to 'Edit tag', edit_tag_path(tag), class: 'btn' %>
            </div>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
