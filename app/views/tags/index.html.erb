<p><%= link_to "Add a new tag", new_tag_path %></p>

<table class="table table-striped table-bordered table-condensed" id="tags-list" summary="List of tags">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Tag ID</th>
      <th scope="col">Type</th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.title %></td>
      <td><%= tag.tag_id %></td>
      <td><%= tag.tag_type %></td>
    </tr>
  <% end %>
  </tbody>
</table>
