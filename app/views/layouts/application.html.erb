<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | GOV.UK Panopticon</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'bootstrap.min.css', 'bootstrap-responsive.min.css', 'application.css' %>
  <%= yield :extra_headers %>
</head>

<body>
  <header class="navbar navbar-fixed-top" role="banner">
    <div class="navbar-inner">
      <div class="container-fluid">
        <%= link_to 'GOV.UK Panopticon', root_path, :class => "brand" %>
        <nav role="navigation" class="nav-collapse">
          <ul class="nav">
            <li><%= link_to 'All items', root_path %></li>
            <li><%= link_to 'Add item', new_artefact_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li><%= link_to 'Sign out', gds_sign_out_path %></li>
          </ul>
          <p class="navbar-text pull-right">Signed in as <a href="<%= Plek.current.find('signon') %>"><%= current_user %></a></p>
        </nav>
      </div>
    </div>
  </header>

  <section class="container-fluid" role="main">
    <%= yield %>
    <hr>
    <footer>
      <p>&copy; GDS. <span class="pull-right">Panopticon version 2.0</span></p>
    </footer>
  </section>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <%= javascript_include_tag('bootstrap.min.js') %>
  <%= yield :extra_javascript %>

</body>
</html>
