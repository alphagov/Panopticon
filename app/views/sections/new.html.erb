<%= content_for :page_title, "New section" %>

<% if flash[:error].present? %>
  <div class="alert alert-error"><%= flash[:error] %></div>
<% end %>

<div class="page-header">
  <h1><%= yield :page_title %></h1>
</div>

<div>
  <%= semantic_form_for(@section, as: :section, url: sections_path, html: { class: 'form-horizontal' }) do |f| %>
    <%= render 'form', form: f, section: @section %>
  <% end %>
</div>