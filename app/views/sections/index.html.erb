<%= content_for :page_title, "List sections" %>

<div class="row-fluid">
  <% if flash[:notice].present? %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  <div class="page-header">
    <h1><%= yield :page_title %></h1>
  </div>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <td>
            <%= link_to section.title, edit_section_path(section) %>
          </td>
          <td>
            <%= link_to "View on site", Plek.current.find("www") + "/" + section.tag_id %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p class="well">
    <% if current_user.has_permission?("Create sections") %>
      <%= link_to "Add new section", new_section_path, :class => "btn btn-primary" %>
    <% end %>
  </p>
</div>
