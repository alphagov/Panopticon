<%= content_for :page_title, "List modules" %>

<div class="row-fluid">
  <% if flash[:notice].present? %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  <div class="page-header">
    <h1><%= yield :page_title %></h1>
  </div>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% @section_modules.each do |section_module| %>
        <tr>
          <td>
            <%= link_to section_module.title, edit_section_module_path(section_module) %>
          </td>
          <td>
            <span class="label label-success"><%= section_module.type %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p class="well"><%= link_to "Add new module", new_section_module_path, :class => "btn btn-primary" %></p>
</div>
