<%= content_for :page_title, "List browse sections" %>

<div class="row-fluid">
  <div class="page-header">
    <h1><%= yield :page_title %></h1>
  </div>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <td><%= section.title %></td>
          <td><%= section.tag_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
