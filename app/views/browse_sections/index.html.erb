<%= content_for :page_title, "List browse sections" %>
<% if flash[:notice].present? %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="row-fluid">
  <div class="page-header">
    <h1><%= yield :page_title %></h1>
  </div>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |section| %>
        <tr class="<%= section.has_parent? ? '' : 'top-level-section' %>">
          <td>
            <%= link_to section.title, edit_browse_section_path(section) %>
          </td>
          <td>
            <%= link_to section.tag_id, Plek.current.website_root + "/#{section.tag_id}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
